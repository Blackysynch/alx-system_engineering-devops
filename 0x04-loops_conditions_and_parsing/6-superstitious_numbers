#!/usr/bin/env bash
# This script is displays "Holberton School " 10 times
# Then displays badluck from a country
i="1"

while [ $i -lt 21 ]
do
	echo $i
case $i in
	"4" )
	echo "bad luck from China"
	;;
	"9" )
	echo "bad luck from Japan"
	;;
	"17")
	echo "bad luck from Italy"
	;;
esac
i=$((i+1))
done
